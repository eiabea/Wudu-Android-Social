<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="at.peterzainzinger.wudu.android.social.sample.MainActivity">

    <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:enabled="false" />

    <Button android:layout_toRightOf="@+id/sign_in_button" android:id="@+id/btn_google_revoke" android:layout_width="200dp" android:layout_height="50dp" android:text="Revoke"/>

    <Button android:id="@+id/btn_twitter_login" android:layout_below="@+id/sign_in_button" android:layout_width="match_parent" android:layout_height="100dp" android:text="Twitter"/>

    <Button android:id="@+id/btn_facebook_login" android:layout_below="@+id/btn_twitter_login" android:layout_width="match_parent" android:layout_height="100dp" android:text="Facebook"/>


</RelativeLayout>
